<odoo>

    <record id="mrp_production_form_view_seq" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit.seq</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <!-- Place new fields in the first group while being compatible with OE  -->
            <xpath expr="//label[@for='lot_producing_id']" position="before">
                <label for="is_normal_sequence" groups="mrp_lot_number_propagation.lot_number_group"/>
                <div class="o_row" groups="mrp_lot_number_propagation.lot_number_group">
                    <field name="is_normal_sequence" nolabel="1"/>
                    <label style="font-weight:bold;" for="seq_count" groups="mrp_lot_number_propagation.lot_number_group"
                           attrs="{'invisible': [('is_normal_sequence', '=', True)]}"/>
                    <field name="seq_count" nolabel="1" groups="mrp_lot_number_propagation.lot_number_group"
                           attrs="{'invisible': [('is_normal_sequence', '=', True)]}"/>

                </div>

                <!--                <div class="o_row" attrs="{'invisible': [('is_normal_sequence', '=', True)]}"-->
                <!--                     groups="mrp_lot_number_propagation.lot_number_group">-->


                <!--                </div>-->
            </xpath>
        </field>
    </record>

</odoo>
