<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Override the warehouse action -->
    <record id="stock.action_warehouse_form" model="ir.actions.act_window">
        <field name="name">Warehouses</field>
        <field name="res_model">stock.warehouse</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="stock.view_warehouse_tree"/>
        <field name="context">{'create': False}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No warehouse found
          </p>
        </field>
    </record>

    <!-- Override the warehouse tree view -->
    <record id="view_warehouse_tree" model="ir.ui.view">
        <field name="name">stock.warehouse.tree</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse_tree"/>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="create">0</attribute>
            </tree>
        </field>
    </record>

    <!-- Override the warehouse form view -->
    <record id="view_warehouse_form" model="ir.ui.view">
        <field name="name">stock.warehouse.form</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse"/>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="create">0</attribute>
            </form>
        </field>
    </record>

    <!-- Override the stock.picking.type kanban view -->
    <record id="view_picking_type_kanban_inherited" model="ir.ui.view">
        <field name="name">stock.picking.type.kanban.inherited</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.stock_picking_type_kanban"/>
        <field name="arch" type="xml">
            <kanban position="attributes">
                <attribute name="domain">[('warehouse_id', 'in', user.env.user.warehouse_ids.ids)]</attribute>
            </kanban>
        </field>
    </record>

    <!-- Override the stock.picking.type action -->
    <record id="stock.stock_picking_type_action" model="ir.actions.act_window">
        <field name="name">Operation Types</field>
        <field name="res_model">stock.picking.type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="stock.stock_picking_type_kanban"/>
        <field name="domain">[('warehouse_id', 'in', user.env.user.warehouse_ids.ids)]</field>
        <field name="context">{'create': False}</field>
    </record>


</odoo>


