<?xml version="1.0"?>
<odoo>
    <!-- Custom view for stock.production.lot -->
    <record id="view_production_lot_form_custom" model="ir.ui.view">
        <field name="name">stock.production.lot.form.custom</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <!-- Insert bales_number field after product_qty field -->
            <xpath expr="//field[@name='name']" position="after">
                <group>
                    <label for="bales_number"/>
                    <div class="o_row">
                     <field name="bales_number"/>
                    </div>
                </group>

            </xpath>
        </field>
    </record>
</odoo>
