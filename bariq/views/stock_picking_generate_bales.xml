<odoo>
    <record id="view_picking_form_custom" model="ir.ui.view">
        <field name="name">stock.picking.form.custom</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Add Generate Bales Button -->
            <xpath expr="//header/button" position="before">
                <button name="action_generate_bales" type="object" string="Generate Bales" class="btn-primary"/>
            </xpath>
            <!-- Add new page for Bales Ref -->

            <!-- <xpath expr="//notebook/page[@name='extra']" position="after">
                    <page string="Bales List">
                        <field name="bales_ids">
                            <tree editable="bottom">
                                <field name="name" string="Bale Number"/>
                            </tree>
                        </field>
                    </page>
            </xpath> -->

        </field>
    </record>


    <!-- stock_picking_bale_views.xml -->

    <!-- Tree view for stock.picking.bale -->
    <record id="view_stock_picking_bale_tree" model="ir.ui.view">
        <field name="name">stock.picking.bale.tree</field>
        <field name="model">stock.picking.bale</field>
        <field name="arch" type="xml">
            <tree string="Bales List">
                <field name="name"/>
                <field name="picking_id"/>
            </tree>
        </field>
    </record>

    <!-- Inherit the stock.picking form view -->
    <record id="view_stock_picking_form_inherit_bales" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.bales</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <!-- Add new page for Bales List -->
                <page string="Bales List">
                    <field name="bales_ids">
                        <tree string="Bales List">
                            <field name="name"/>
                            <field name="picking_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>


</odoo>
