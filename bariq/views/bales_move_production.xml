<odoo>
    <record id="view_stock_move_line_form_inherit_bales" model="ir.ui.view">
        <field name="name">view_stock_move_line_form_inherit_bales</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_form"/>
        <field name="arch" type="xml">
            <!-- Place the bales_number field after the responsible field -->
            <xpath expr="//field[@name='responsible']" position="after">
                <field name="bales_number"/>
            </xpath>
        </field>
    </record>
</odoo>
