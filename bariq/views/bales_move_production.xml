<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit the existing stock picking form view -->
        <record id="view_stock_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/> <!-- Ensure this is the correct XML ID -->
            <field name="arch" type="xml">
                <!-- Add production_bales_number field before qty_done in move_ids_without_package -->
                <xpath expr="//notebook/page[@name='operations']/field[@name='move_ids_without_package']/tree/field[@name='quantity_done']" position="before">
                    <field name="production_bales_number"/>
                </xpath>

                <xpath expr="//notebook/page[@name='detailed_operations']/field[@name='move_ids_without_package']/tree/field[@name='quantity_done']" position="before">
                    <field name="production_bales_number"/>
                </xpath>

                
            </field>
        </record>


    </data>
</odoo>
