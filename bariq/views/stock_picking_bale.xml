<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_picking_bale_view_tree" model="ir.ui.view">
            <field name="name">stock.picking.bale.view.tree</field>
            <field name="model">stock.picking.bale</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="sequence"/>
                    <field name="product_id"/>
                    <field name="location_id"/>
                    <field name="picking_id"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'confirm'" decoration-danger="state == 'cancel'"/>
                    <button name="action_print_line_barcode" string="Print Barcode" type="object" class="btn-primary"/>
                </tree>
            </field>
        </record>


        <record id="stock_picking_bale_action" model="ir.actions.act_window">
            <field name="name">Bales</field>
            <field name="res_model">stock.picking.bale</field>
            <field name="view_mode">tree</field>
        </record>

        <!-- New menu item for Bales under Inventory -> Products -->
        <menuitem id="menu_inventory_bales"
                  name="Bales"
                  parent="stock.menu_product_variant_config_stock"
                  action="stock_picking_bale_action"
                  sequence="20"/>
    </data>
</odoo>