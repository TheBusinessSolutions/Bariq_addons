<odoo>
    <data>
        <record id="view_weight_configuration_company_form_inherit" model="ir.ui.view">
            <field name="name">view.weight.configuration.company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="weight_configuration" string="Weight Script Configuration">
                        <group>
                            <group>
                                <field name="weight_script_url"/>
                            </group>
                            <group>
                                <field name="weight_script_port"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>